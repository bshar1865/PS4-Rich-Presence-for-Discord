<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#404040"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#505050"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#3D3D3D"/>
    <SolidColorBrush x:Key="WindowTitleBrush" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="WindowTitleTextBrush" Color="#FFFFFF"/>
    
    <!-- System Tray Colors -->
    <SolidColorBrush x:Key="TrayBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TrayForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TrayHoverBrush" Color="#3D3D3D"/>
    <SolidColorBrush x:Key="TrayBorderBrush" Color="#404040"/>
</ResourceDictionary>
