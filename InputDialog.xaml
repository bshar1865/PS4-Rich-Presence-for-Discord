<Window x:Class="PS4RichPresence.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Message" Text="Enter value:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="ResponseTextBox" Grid.Row="1" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="60" Click="OKButton_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="60" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 